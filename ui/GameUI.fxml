<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.ui.GameUI">

    <children>
      <StackPane prefHeight="400.0" prefWidth="601.0" />
      <ImageView fx:id="sceneImage" fitHeight="300.0" fitWidth="603.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="false" mouseTransparent="true" />
       
        <Button fx:id="goButton" layoutX="14.0" layoutY="308.0" prefHeight="28.0" prefWidth="86.0" text="Go" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="15.0" /></font>
        </Button>

        <Button fx:id="examineButton" layoutX="108.0" layoutY="308.0" prefHeight="28.0" prefWidth="86.0" text="Examine" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="15.0" /></font>
        </Button>

        <Button fx:id="useButton" layoutX="205.0" layoutY="308.0" prefHeight="28.0" prefWidth="86.0" text="Use" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="15.0" /></font>
        </Button>

        <Button fx:id="inventoryButton" layoutX="300.0" layoutY="308.0" prefHeight="28.0" prefWidth="86.0" text="Inventory" textFill="#9612c7">
