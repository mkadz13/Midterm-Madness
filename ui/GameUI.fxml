        <Button fx:id="dropButton" layoutX="108.0" layoutY="358.0" prefHeight="28.0" prefWidth="86.0" text="Drop" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="15.0" /></font>
        </Button>

        <Button fx:id="giveButton" layoutX="205.0" layoutY="358.0" prefHeight="28.0" prefWidth="86.0" text="Give" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="15.0" /></font>
        </Button>

        <Button fx:id="talkButton" layoutX="300.0" layoutY="358.0" prefHeight="28.0" prefWidth="86.0" text="Talk" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="15.0" /></font>
