            <font><Font name="Bell MT Bold" size="10.0" /></font>
        </Button>

        
        <Button fx:id="turnCountButton" focusTraversable="false" layoutX="491.0" layoutY="42.0" prefHeight="28.0" prefWidth="94.0" text="Number of Turns" textFill="#9612c7">
            <font><Font name="Bell MT Bold" size="10.0" /></font>
        </Button>

        
        <TextArea fx:id="infoBox" layoutX="413.0" layoutY="308.0" prefHeight="78.0" prefWidth="169.0" wrapText="true" />
